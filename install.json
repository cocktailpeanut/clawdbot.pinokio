{
  "run": [
    {
      "method": "shell.run",
      "params": {
        "message": "npm i -g clawdbot@latest"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "input": true,
        "message": "clawdbot onboard --skip-ui",
        "on": [{
          "event": "/.*onboarding complete.*/i",
          "kill": true
        }]
      }
    },
    {
      "method": "modal",
      "params": {
        "title": "Onboarding Complete",
        "description": "Now click the 'start' tab to get started"
      }
    }
  ]
}
